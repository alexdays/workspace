<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="LibraryDataService"
                      transaction-type="JTA">
        <jta-data-source>java:/MySqlDS</jta-data-source>
        <class>container.entity.Author</class>
        <class>container.entity.Book</class>
        <properties>
            <property name="javax.persistence.jdbc.driver"
                      value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://127.0.0.1:3306/aipos5"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="festinelente"/>
        </properties>
    </persistence-unit>
</persistence>